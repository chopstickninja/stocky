  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body id="bodycontainer">
<% if current_user %>
    <nav class="top-bar hide-for-small" style="background-color: #517fa4; height: 50px; ">
  <ul class="title-area">
    <!-- Title Area -->
    <li class="name">
        <h1>
          <a href="<%= users_url %>" style="font-size: 24px;">
              Stocktastic
          </a>
        </h1>
    </li>
  </ul>

  <section class="top-bar-section" style="left: 0%;">
    <!-- Right Nav Section -->
    <ul class="right">
       <li class=""><a href="<%= user_url(current_user) %>" style="background-color: #517fa4; font-size: 14px;">My Strategies</a></li>
      <li class=""><a href="#" style="background-color: #517fa4; font-size: 14px;">Documentation</a></li>
    </ul>
  </section>
</nav>
<% end %>

    <%= yield %>

    
    <%= javascript_include_tag "application" %>
  </body>
</html>
